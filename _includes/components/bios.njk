<div class="site-section testimonial-wrap   bg-light" id="team-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">Team</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for bio in collections.bios %}
                <div class="col-md-12 col-lg-6 p-4">
                    <div class="testimonial">
                        <figure class="mb-4 d-block align-items-center justify-content-center">
                            <div><img src="{{bio.data.photo}}" alt="Image" class="w-100 img-fluid mb-3 shadow">
                            </div>
                        </figure>
                        <p class="text-black">
                            <strong>{{bio.data.name}}</strong>
                            <div>{{bio.data.position}}</div>

                        </p>
                        <blockquote class="mb-3 text-justify">
                            <p>{{bio.templateContent | safe}}</p>
                        </blockquote>

                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">Partners</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% for bio in collections.partners %}
                <div class="col-md-6 col-lg-6  p-4">
                    <div class="testimonial">
                        <figure class="mb-4 d-block align-items-center justify-content-center">
                            <div><img src="{{bio.data.photo}}" alt="Image" class="w-100 img-fluid mb-3 shadow">
                            </div>
                        </figure>
                        <p class="text-black">
                            <strong>{{bio.data.name}}</strong>
                            <div>{{bio.data.position}}</div>

                        </p>
                        <blockquote class="mb-3 text-justify">
                            <p>{{bio.templateContent | safe}}</p>
                        </blockquote>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>